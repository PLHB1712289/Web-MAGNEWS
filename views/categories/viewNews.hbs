<!-- Breadcrumb -->
	<div class="container">
		<div class="bg0 flex-wr-sb-c p-rl-20 p-tb-8">
			<div class="f2-s-1 p-r-30 m-tb-6">
				<a href="/" class="breadcrumb-item f1-s-3 cl9">
					Trang chủ
				</a>
				<span class="breadcrumb-item f1-s-3 cl9">
					{{categoryNews}}
				</span>
			</div>

			<div class="pos-relative size-a-2 bo-1-rad-22 of-hidden bocl11 m-tb-6">
				<input class="f1-s-1 cl6 plh9 s-full p-l-25 p-r-45" type="text" name="search" placeholder="Search">
				<button class="flex-c-c size-a-1 ab-t-r fs-20 cl2 hov-cl10 trans-03">
					<i class="zmdi zmdi-search"></i>
				</button>
			</div>
		</div>
	</div>

    <!-- Page heading -->
	<div class="container p-t-4 p-b-40">
		<h2 class="f1-l-1 cl2">
			{{categoryNews}}
		</h2>
	</div>

    <!-- Feature post -->
	<section class="bg0">
		<div class="container">
			<div class="row m-rl--1">
                {{#each newsFeaturePostLarge}}
				<div class="col-md-6 p-rl-1 p-b-2">
					<div class="bg-img1 size-a-3 how1 pos-relative" style="background-image: url({{img}});">
						<a href="{{link}}" class="dis-block how1-child1 trans-03"></a>
                            <div class="flex-col-e-s s-full p-rl-25 p-tb-20">
							<a href="#" class="dis-block how1-child2 f1-s-2 cl0 bo-all-1 bocl0 hov-btn1 trans-03 p-rl-5 p-t-2">
								{{categoryNews}}
							</a>

							<h3 class="how1-child2 m-t-14 m-b-10">
								<a href="{{link}}" class="how-txt1 size-a-6 f1-l-1 cl0 hov-cl10 trans-03">
									{{title}}
								</a>
							</h3>

							<span class="how1-child2">
								<span class="f1-s-4 cl11">
									VOV - Báo điện tử đài tiếng nói Việt Nam
								</span>
							</span>
						</div>						
					</div>
				</div>
                {{/each}}

                
				<div class="col-md-6 p-rl-1">
					<div class="row m-rl--1">
                        {{#each newsFeaturePost}}
						<div class="col-sm-6 p-rl-1 p-b-2">
							<div class="bg-img1 size-a-14 how1 pos-relative" style="background-image: url({{img}});">
		
								<a href="{{link}}" class="dis-block how1-child1 trans-03"></a>

								<div class="flex-col-e-s s-full p-rl-25 p-tb-20">
									<a href="#" class="dis-block how1-child2 f1-s-2 cl0 bo-all-1 bocl0 hov-btn1 trans-03 p-rl-5 p-t-2">
										{{categoryNews}}
									</a>

									<h3 class="how1-child2 m-t-14">
										<a href="{{link}}" class="how-txt1 size-h-1 f1-m-1 cl0 hov-cl10 trans-03">
											{{title}}
										</a>
									</h3>
								</div>
							</div>
						</div>
                        {{/each}}
					</div>
				</div>
			</div>
		</div>
	</section>

    <!-- Post -->
    <section class="bg0 p-t-70 p-b-55">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-10 col-lg-8 p-b-80">
					<div class="row">
                        {{#each newsPost}}
						<div class="col-sm-6 p-r-25 p-r-15-sr991">
							<!-- Item latest -->	
							<div class="m-b-45">
								<a href="{{link}}" class="wrap-pic-w hov1 trans-03">
									<img class="photo-lazy" data-src="{{img}}" alt="IMG">
								</a>

								<div class="p-t-16">
									<h5 class="p-b-5">
										<a href="{{link}}" class="f1-m-3 cl2 hov-cl10 trans-03">
											{{title}}
										</a>
									</h5>

									<span class="cl8">
										<a href="#" class="f1-s-4 cl8 hov-cl10 trans-03">
											VOV - Báo điện tử đài tiếng nói Việt Nam
										</a>
									</span>
								</div>
							</div>
						</div>
                        {{/each}}
					</div>

					<!-- Pagination -->
					<div class="flex-wr-s-c m-rl--7 p-t-15">
						<a href="#" class="flex-c-c pagi-item hov-btn1 trans-03 m-all-7 pagi-active">1</a>
						<a href="#" class="flex-c-c pagi-item hov-btn1 trans-03 m-all-7">2</a>
					</div>
				</div>

				<div class="col-md-10 col-lg-4 p-b-80">
					<div class="p-l-10 p-rl-0-sr991">	

						<!-- Most Popular -->
						<div class="p-b-23">
							<div class="how2 how2-cl4 flex-s-c">
								<h3 class="f1-m-2 cl3 tab01-title">
									Bài viết khác
								</h3>
							</div>

							<ul class="p-t-35">
								{{#each newsShortContent}}
								<li class="flex-wr-sb-s p-b-22">
									<div class="size-a-8 flex-c-c borad-3 size-a-8 bg9 f1-m-4 cl0 m-b-6">
										{{countNewsShortContent}}
									</div>

									<a href="{{link}}" class="size-w-3 f1-s-7 cl3 hov-cl10 trans-03">
										{{title}}
									</a>
								</li>
								{{/each}}
							</ul>
						</div>

						<!--  -->
						<div class="flex-c-s p-b-50">
							<a href="#">
								<img class="max-w-full photo-lazy" data-src="images/banner-02.jpg" alt="IMG">
							</a>
						</div>
						
						<!-- Tag -->
						<div>
							<div class="how2 how2-cl4 flex-s-c m-b-30">
								<h3 class="f1-m-2 cl3 tab01-title">
									Tags
								</h3>
							</div>

							<div class="flex-wr-s-s m-rl--5">
								<a href="/entertainment" class="flex-c-c size-h-2 bo-1-rad-20 bocl12 f1-s-1 cl8 hov-btn2 trans-03 p-rl-20 p-tb-5 m-all-5">
									Giải trí
								</a>

								<a href="/business" class="flex-c-c size-h-2 bo-1-rad-20 bocl12 f1-s-1 cl8 hov-btn2 trans-03 p-rl-20 p-tb-5 m-all-5">
									Kinh tế
								</a>

								<a href="/social" class="flex-c-c size-h-2 bo-1-rad-20 bocl12 f1-s-1 cl8 hov-btn2 trans-03 p-rl-20 p-tb-5 m-all-5">
									Xã hội
								</a>

								<a href="life-style" class="flex-c-c size-h-2 bo-1-rad-20 bocl12 f1-s-1 cl8 hov-btn2 trans-03 p-rl-20 p-tb-5 m-all-5">
									Đời sống
								</a>

								<a href="/sport" class="flex-c-c size-h-2 bo-1-rad-20 bocl12 f1-s-1 cl8 hov-btn2 trans-03 p-rl-20 p-tb-5 m-all-5">
									Thể thao
								</a>

								<a href="/world" class="flex-c-c size-h-2 bo-1-rad-20 bocl12 f1-s-1 cl8 hov-btn2 trans-03 p-rl-20 p-tb-5 m-all-5">
									Thế giới
								</a>

								<a href="/army" class="flex-c-c size-h-2 bo-1-rad-20 bocl12 f1-s-1 cl8 hov-btn2 trans-03 p-rl-20 p-tb-5 m-all-5">
									Quân sự
								</a>

								<a href="/law" class="flex-c-c size-h-2 bo-1-rad-20 bocl12 f1-s-1 cl8 hov-btn2 trans-03 p-rl-20 p-tb-5 m-all-5">
									Pháp luật
								</a>

								<a href="/health" class="flex-c-c size-h-2 bo-1-rad-20 bocl12 f1-s-1 cl8 hov-btn2 trans-03 p-rl-20 p-tb-5 m-all-5">
									Sức khỏe
								</a>
							</div>	
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>